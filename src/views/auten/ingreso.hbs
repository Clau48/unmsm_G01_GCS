<div class="container-fluid login">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-lg-6 d-lg-flex d-none">
                <img src="images/login/login_image_1.png" alt="">
            </div>
            <div class="col-12 col-lg-6">
                <div class="card card-login mx-auto px-lg-4">
                    <div class="card-body text-center">
                        <h2>Iniciar Sesión</h2>
                        <h3>¡Bienvenido!</h3>
                        <form action="/ingreso" method="POST">
                            <div class="form-row align-items-center">
                                <div class="col-12">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <img src="images/login/user.png" alt="Usuario" height="32px" width="32px">
                                            </div>
                                        </div>
                                        <input type="text" class="form-control py-2" id="inlineFormInput" placeholder="USUARIO">
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <div class="input-group-text">
                                                <img src="images/login/lock.png" alt="Contraseña" height="32px" width="32px">
                                            </div>
                                        </div>
                                        <input type="text" class="form-control py-2" id="inlineFormInputGroup" placeholder="CONTRASEÑA">
                                    </div>
                                </div>

                                <div class="col-12">
                                    <div class="form-check mb-2 text-left">
                                        <input class="form-check-input" type="checkbox" id="autoSizingCheck">
                                        <label class="form-check-label" for="autoSizingCheck">
                                        Recordar
                                        </label>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn btn-principal mb-2 col-12">INGRESAR</button>
                                </div>
                            </div>
                        </form>
                        <a href="#">Recuperar Contraseña</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>